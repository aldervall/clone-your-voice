# Clone Your Voice - Environment Configuration
# Copy this file to .env and customize for your environment

# Flask Environment
# Options: development, production, testing
FLASK_ENV=development

# Secret key for session management (CHANGE THIS IN PRODUCTION!)
SECRET_KEY=your-secret-key-here-change-me-in-production

# Server Configuration
HOST=0.0.0.0
PORT=5000
# Optional: Base URL for frontend assets and links (e.g., https://clonevoice.yourdomain.com)
# Leave empty to use relative paths
BASE_URL=

# TTS Model Configuration
# Backbone model repository
TTS_BACKBONE_REPO=neuphonic/neutts-air
# Device for backbone: cpu or cuda
TTS_BACKBONE_DEVICE=cpu

# Codec model repository
TTS_CODEC_REPO=neuphonic/neucodec
# Device for codec: cpu or cuda
TTS_CODEC_DEVICE=cpu

# TTS Processing Settings
# Maximum tokens per text chunk (lower = more chunks, safer for memory)
TTS_MAX_TOKENS=1200

# Session Management
# Session timeout in seconds (how long before abandoned sessions are cleaned)
SESSION_TIMEOUT_SECONDS=300
# Interval for session cleanup in seconds
SESSION_CLEANUP_INTERVAL=60

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Optional: Path to log file (leave empty for console only)
LOG_FILE=

# Performance Settings
# Maximum file upload size in MB
MAX_UPLOAD_SIZE_MB=50
